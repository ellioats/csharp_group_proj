<Window x:Class="GroupProjectCSharp.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProjectCSharp"
        mc:Ignorable="d"
        Title="StartPage" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="TextBox1" Width="200" Height="30" Margin="0,10,0,0" Padding="5" FontSize="14" Text="Enter first integer" GotFocus="TextBox_GotFocus"/>
            <TextBox Name="TextBox2" Width="200" Height="30" Margin="0,10,0,0" Padding="5" FontSize="14" Text="Enter second integer" GotFocus="TextBox_GotFocus"/>
            <TextBox Name="GoodHighlandersTextBox" Width="200" Height="30" Margin="0,10,0,0" Padding="5" FontSize="14" Text="Enter number of good Highlanders" GotFocus="TextBox_GotFocus"/>
            <TextBox Name="BadHighlandersTextBox" Width="200" Height="30" Margin="0,10,0,0" Padding="5" FontSize="14" Text="Enter number of bad Highlanders" GotFocus="TextBox_GotFocus"/>
            <Button Name="StartButton" Width="100" Height="30" Margin="0,20,0,0" Padding="5" FontSize="14" Content="Start" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>