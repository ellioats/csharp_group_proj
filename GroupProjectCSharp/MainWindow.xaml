<Window x:Class="ArrayTraveler.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="2D Array Traveler" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Name="ArrayGrid" Grid.Row="0">
            <!-- Grid definitions will be added dynamically in code-behind -->
        </Grid>

        <TextBox Name="LogTextBox" Grid.Row="1" Width="780" Height="100" Margin="10" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>

        <Button Name="StartSimulationButton" Content="Start Simulation" Width="150" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10,0,10" Grid.Row="2" Click="StartSimulationButton_Click"/>
    </Grid>
</Window>